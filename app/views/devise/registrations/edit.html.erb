<% content_for :title, "Changer le mot de passe - Bisso Fragrance" %>

<h1>Changer votre mot de passe</h1>

<%= form_for(resource, as: resource_name, url: update_admin_panel_password_path, html: { method: :patch }, class: "auth-form") do |f| %>
  <div class="mb-3">
    <%= f.label :email, "Adresse email (non modifiable)", class: "form-label fw-semibold" %>
    <%= f.email_field :email, readonly: true, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, "Nouveau mot de passe", class: "form-label fw-semibold" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "********" %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">Minimum <%= @minimum_password_length %> caractères</small>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "form-label fw-semibold" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "********" %>
  </div>

  <div class="mb-3">
    <%= f.label :current_password, "Mot de passe actuel (pour confirmation)", class: "form-label fw-semibold" %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "********" %>
  </div>

  <%= f.submit "Mettre à jour", class: "btn btn-primary mb-3" %>
<% end %>

<div class="links">
  <%= link_to "Retour au dashboard", admin_panel_root_path %>
</div>