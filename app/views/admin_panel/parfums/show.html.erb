<div class="parfum-detail-container">
  <div class="parfum-detail-card">
    <h1 class="parfum-title"><%= @parfum.name %></h1>
    
    <div class="parfum-content">
      <% if @parfum.image.attached? %>
        <div class="parfum-image">
          <%= image_tag @parfum.image.variant(resize_to_limit: [300, 300]), 
              class: "parfum-image-img" %>
          <p class="parfum-image-caption">Image déjà importée</p>
          <div class="parfum-info">
        <div class="parfum-info-item">
          <h5 class="parfum-info-label">Marque</h5>
          <p class="parfum-info-value"><%= @parfum.brand.name %></p>
        </div>
        
        <div class="parfum-info-item">
          <h5 class="parfum-info-label">Prix</h5>
          <p class="parfum-info-value"><%= number_to_currency(@parfum.prix, unit: "Dt") %></p>
        </div>
        
        <div class="parfum-info-item">
          <h5 class="parfum-info-label">Catégorie</h5>
          <p class="parfum-info-value">
            <%= t("activerecord.enums.parfum.category.#{@parfum.category}") %>
          </p>
        </div>

        <div class="parfum-info-item">
          <h5 class="parfum-info-label">Type</h5>
          <p class="parfum-info-value">
            <%= t("activerecord.enums.parfum.fragrance_class.#{@parfum.fragrance_class}") %>
          </p>
        </div>
        
        <div class="parfum-info-item">
          <h5 class="parfum-info-label">Description</h5>
          <p class="parfum-info-value"><%= @parfum.description %></p>
        </div>
        
        <div class="parfum-info-item">
          <h5 class="parfum-info-label">Disponibilité</h5>
          <p class="parfum-info-value"><%= @parfum.disponible? ? "Disponible" : "Rupture de stock" %></p>
        </div>
      </div>
        </div>
      <% end %>
    </div>
    
    <div class="parfum-actions">
      <%= link_to "Modifier", edit_admin_panel_parfum_path(@parfum),
          class: "parfum-action-btn primary" %>
      
      <%= button_to "Supprimer", admin_panel_parfum_path(@parfum),
          method: :delete,
          form: { 
            class: "d-inline",
            "data-controller": "confirm",
            "data-action": "submit->confirm#confirm",
            "data-turbo-frame": "_top"
          },
          class: "parfum-action-btn danger" %>

      <%= link_to "Retour à la liste", admin_panel_parfums_path,
          class: "parfum-action-btn secondary" %>
    </div>
  </div>
</div>