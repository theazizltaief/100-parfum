<%= form_with model: [:admin_panel, parfum], id: "new_parfum_form", data: { turbo_frame: "_top" }, class: "needs-validation", novalidate: true do |f| %>
  <div class="mb-3">
    <%= f.label :name, "Nom*", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true, maxlength: 36 %>
    <div class="invalid-feedback">Veuillez remplir ce champ (max 36 caractères)</div>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Description*", class: "form-label" %>
    <%= f.text_area :description, class: "form-control", required: true, minlength: 5, maxlength: 150 %>
    <div class="invalid-feedback">Minimum 5 caractères (max 150 caractères)</div>
  </div>

  <div class="mb-3" data-controller="nested-form">
    <h4>Contenances et Prix*</h4>
    <div data-nested-form-target="variants">
      <%= f.fields_for :variants do |variant_form| %>
        <div class="variant-form mb-3 border p-3">
          <%= variant_form.label :size, "Contenance (ex: 50ml)", class: "form-label" %>
          <%= variant_form.text_field :size, class: "form-control", required: true %>
          <div class="invalid-feedback">Veuillez spécifier une contenance</div>
          <%= variant_form.label :price, "Prix", class: "form-label" %>
          <%= variant_form.number_field :price, step: 0.01, class: "form-control", required: true, min: 0.01 %>
          <div class="invalid-feedback">Veuillez spécifier un prix supérieur à 0</div>
          <%= variant_form.check_box :_destroy %>
          <%= variant_form.label :_destroy, "Supprimer cette contenance" %>
        </div>
      <% end %>
    </div>
    <button type="button" class="btn btn-secondary mt-2" data-action="click->nested-form#add">Ajouter une contenance</button>
  </div>

  <div class="mb-3">
    <%= f.label :brand_id, "Marque*", class: "form-label" %>
    <%= f.collection_select :brand_id, @brands, :id, :name, { prompt: "Sélectionner une marque" }, { class: "form-select", required: true } %>
    <div class="invalid-feedback">Veuillez sélectionner une marque</div>
  </div>
  <div class="d-flex align-items-center gap-5">
    <% if Brand.exists? %>
      <p class="mb-0">Nombre de marques disponibles : <%= Brand.count %></p>
    <% end %>
    <p class="mb-0">
      Vous ne trouvez pas votre marque ?
      <%= link_to "Ajouter une nouvelle marque", new_admin_panel_brand_path(redirect_to: request.fullpath) %>
    </p>
  </div>
  <br>
  <div class="mb-3">
    <%= f.label :disponible, "Disponibilité*", class: "form-label" %>
    <%= f.select :disponible, [["Disponible", true], ["Rupture de stock", false]], {}, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :category, "Catégorie*", class: "form-label" %>
    <%= f.select :category, Parfum.categories.keys.map { |key| [t("activerecord.enums.parfum.category.#{key}"), key] }, { include_blank: "Sélectionnez une catégorie" }, { class: "form-select", required: true } %>
    <div class="invalid-feedback">Veuillez sélectionner une catégorie</div>
  </div>

  <div class="mb-3">
    <%= f.label :fragrance_class, "Type de parfum*", class: "form-label" %>
    <%= f.select :fragrance_class, Parfum.fragrance_classes.keys.map { |key| [t("activerecord.enums.parfum.fragrance_class.#{key}"), key] }, { include_blank: "Sélectionnez un type" }, { class: "form-select", required: true } %>
    <div class="invalid-feedback">Veuillez sélectionner un type</div>
  </div>
  <br>
  <div class="mb-3">
    <%= f.label :image, "Image", class: "form-label" %>
    <%= f.file_field :image, class: "form-control", direct_upload: true %>
    <% if parfum.persisted? && parfum.image.attached? %>
      <div class="mt-2">
        <%= image_tag parfum.image.variant(resize_to_limit: [100, 100]), class: "img-thumbnail" %>
        <div class="form-check mt-2">
          <%= f.check_box :remove_image, class: "form-check-input" %>
          <%= f.label :remove_image, "Supprimer cette image", class: "form-check-label" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= f.submit "Enregistrer", class: "btn btn-success mt-3" %>
<% end %>

<script>
document.addEventListener('turbo:load', () => {
  (() => {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
});
</script>