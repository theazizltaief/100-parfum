<div class="order-confirmation-page">
  <div class="container">
    <div class="confirmation-content">
      <div class="success-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
          <polyline points="22,4 12,14.01 9,11.01"/>
        </svg>
      </div>
      
      <h1 class="confirmation-title">Commande confirmée !</h1>
      <p class="confirmation-subtitle">
        Votre commande a été envoyée avec succès.<br>
        Nous vous contacterons pour confirmer votre commande.
      </p>

      <!-- NOUVEAU : Durée de livraison -->
      <div class="delivery-info">
        <div class="delivery-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="1" y="3" width="15" height="13"/>
            <polygon points="16,8 20,8 23,11 23,16 16,16"/>
            <circle cx="5.5" cy="18.5" r="2.5"/>
            <circle cx="18.5" cy="18.5" r="2.5"/>
          </svg>
        </div>
        <div class="delivery-text">
          <h3>Durée de livraison</h3>
          <p>24h à 72h</p>
        </div>
      </div>

      <div class="order-details">
        <h2>Détails de votre commande</h2>
        <div class="order-info">
          <p><strong>Numéro de commande:</strong> #<%= @order.id %></p>
          <p><strong>Nom:</strong> <%= @order.full_name || 'Non spécifié' %></p>
          <p><strong>Téléphone:</strong> <%= @order.phone || 'Non spécifié' %></p>
          <p><strong>Adresse:</strong> <%= @order.address || 'Non spécifié' %>, <%= @order.city || 'Non spécifié' %> <%= @order.postal_code || 'Non spécifié' %></p>
          <p><strong>Total:</strong> <%= number_to_currency(@order.total, unit: 'TND ', separator: ',', delimiter: ' ', precision: 2) %></p>
        </div>

        <div class="order-items-summary">
          <h3>Articles commandés:</h3>
          <% if @order.items.empty? %>
            <p class="no-items-message">Aucun article dans cette commande.</p>
          <% else %>
            <% @order.items.each do |item| %>
              <% 
                image_url = item['image_url'] || item['imageUrl'] || 'https://via.placeholder.com/250x250?text=Parfum'
                name = item['name'] || 'Produit inconnu'
                size = item['size'] || 'N/A'
                quantity = item['quantity']&.to_i || 1
                price = item['price']&.to_f || 0
                category = item['category'] ? (item['category'] == 'unisexe' ? 'Unisexe' : item['category'].capitalize) : 'Non spécifié'
                fragrance_class = item['fragrance_class'] ? (item['fragrance_class'] == 'collection_privee' ? 'Collection Privée' : item['fragrance_class'].capitalize) : 'Non spécifié'
              %>
              <div class="confirmation-item">
                <img src="<%= image_url %>" alt="<%= name %>" class="item-image">
                <div class="item-info">
                  <span><%= name %> (<%= size %>) × <%= quantity %></span>
                  <span class="item-meta">(<%= category %>, <%= fragrance_class %>)</span>
                </div>
                <span class="item-total"><%= number_to_currency(price * quantity, unit: 'TND ', separator: ',', delimiter: ' ', precision: 2) %></span>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="confirmation-actions">
        <%= link_to "Retour à l'accueil", root_path, class: "btn btn-primary" %>
        <%= link_to "Continuer vos achats", vitrine_all_perfumes_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>